%main.container-fluid
  .row.my-2
    .col-4
      %span.small.text-secondary
        - if @items.present?
          = "約 #{@items.count} 件"
    .col-8
      %form.form-inline.justify-content-end
        %input.form-control.form-control-sm.mr-sm-2.w-25{type: "search"}
        -# 通常検索
        %button.btn.btn-success.btn-sm.my-2.my-sm-0 Comparison
  .row.justify-content-center
    .table-responsive
      %table.table.table-striped.table-hover
        %thead.thead-dark
          %tr
            %th{scope: "col"} rec
            %th{scope: "col"} thumnail
            %th{scope: "col"} itemName
            %th{scope: "col"} itemCode
            %th{scope: "col"} shopName
            %th{scope: "col"} reviewCount
            %th{scope: "col"} reviewAverage
            %th{scope: "col"} itemPrice
            %th{scope: "col"} pointRate
            %th{scope: "col"} realPrice
            %th{scope: "col"} comparison
        %tbody
          - if @items.present?
            - num = @items.count
            - @items.each_with_index do |item, num|
              %tr
                %th{scope: "row"}
                  = num + 1
                %td
                  = link_to item['itemUrl'], target: :blank do
                    = image_tag item['smallImageUrls'][0], alt: 'aeron_chaires', class: 'img-thumbnail', width: '200px'
                %td
                  = item['shopName']
                %td
                  = item['itemCode']
                %td
                  = item['itemName']
                %td
                  = item['reviewCount']
                %td
                  = item['reviewAverage']
                %td
                  = (item['itemPrice']).to_s(:delimited)
                %td
                  = item['pointRate']
                %td
                  = (item['itemPrice'].to_i * ( 1 - item['pointRate'].to_i * 0.01)).floor.to_s(:delimited)
                %td -1000

  .row.justify-content-center
    %nav.mt-3{"area-label": "ページネーション" }
      %ul.pagination
        %li.pate-item.disabled
          = link_to "search_words?#{@items}", class: 'page-link', tabindex: "-1" do
            = '前'
        %li.pate-item.active
          = link_to '#', class: 'page-link' do
            = '1'
            %span.sr-only 現ページ
        %li.pate-item
          = link_to '#', class: 'page-link' do
            = '2'
        %li.pate-item
          = link_to '#', class: 'page-link' do
            = '3'
        %li.pate-item
          = link_to '#', class: 'page-link' do
            = '4'
        %li.pate-item
          = link_to '#', class: 'page-link' do
            = '5'
        %li.pate-item
          = link_to '#', class: 'page-link' do
            = '後'
        